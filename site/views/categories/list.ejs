<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', {title: 'Listado de categorías'}) %>
<body class="form">
    <%- include('../partials/header') %>
    
    <section class="top-nav">
        <nav class="top-nav-start breadcrumb">
            <a href="/">Inicio</a>
            <a href="/admin">Admin</a>
            <a href="/categories">Categorias</a>
        </nav>
    </section>
    
    <main class="row main-center admin-form">
        <div class="col-11 container">
            <div class="header">
                <p>Listado de categorias</p>
                <a href="/categories/create" class="btn btn-primary">Crear categoria</a>
            </div>
            <div class="row main-center">
                <!-- table titles -->
                <div class="col-11">
                    <div class="row row-title">
                        <div class="col-2 col-md-1">Foto</div>
                        <div class="col-3 col-md-4">Nombre</div>
                        <div class="col-3 col-md-4">Padre</div>
                        <div class="col-2 col-md-1">Top</div>
                        <div class="col-2 col-md-2">Acciones</div>
                    </div>
                </div>
                <!-- table content -->
                <div class="col-11 ">
                    <% categories.forEach(category => { %>
                        <div class="row row-content cross-center">
                            <div class="col-2 col-md-1 row-image">
                                <img src="/images/categories/<%= category.image  ? category.image : '' %>" onerror="this.src='/images/products/default-image.png'" alt="imagen de categoría">
                            </div>
                            <div class="col-3 col-md-4">
                                <%= category.name %>
                            </div>
                            <div class="col-3 col-md-4">
                                <%= category.parent && category.parent.name %>
                            </div>
                            <div class="col-2 col-md-1">
                                <%= category.top %>
                            </div>
                            <div class="col-2 col-md-2">
                                <a class="btn btn-icon" href="/categories/<%= category.id %>">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-icon" href="/categories/<%= category.id %>/edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form class="form-only-btn" action="/categories/<%= category.id %>?_method=delete" method="post">
                                    <button class="btn btn-icon" type="submit">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>